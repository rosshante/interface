            {
                case 1: textBox2.Text = Convert.ToString("Обезьяна"); break;
                case 2: textBox2.Text = Convert.ToString("Петух"); break;
                case 3: textBox2.Text = Convert.ToString("Собака"); break;
                case 4: textBox2.Text = Convert.ToString("Кабан"); break;
                case 5: textBox2.Text = Convert.ToString("Крыса"); break;
                case 6: textBox2.Text = Convert.ToString("Бык"); break;
                case 7: textBox2.Text = Convert.ToString("Тигр"); break;
                case 8: textBox2.Text = Convert.ToString("Кролик"); break;
                case 9: textBox2.Text = Convert.ToString("Дракон"); break;
                case 10: textBox2.Text = Convert.ToString("Змея"); break;
                case 11: textBox2.Text = Convert.ToString("Лошадь"); break;
                case 12: textBox2.Text = Convert.ToString("Овца"); break;
                default:
                    textBox2.Text = Convert.ToString("ВЫ ОШИБЛИСЬ"); break;
            }
        }
    }
